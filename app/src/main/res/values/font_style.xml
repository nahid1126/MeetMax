<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Heading Styles -->

    <style name="Heading3Bold">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Display Styles -->
    <style name="DisplayBold">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <!-- Body Styles -->
    <style name="BodyBold">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="BodyRegular">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Label Styles -->
    <style name="LabelTitle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Heading Styles -->
    <style name="Heading1Black">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Heading2Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Display Medium using Roboto-Medium -->
    <style name="DisplayMedium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Body Medium using Roboto-Medium -->
    <style name="BodyMedium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
